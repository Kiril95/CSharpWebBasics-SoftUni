    <h1>@(Model.Message==string.Empty?null:Model.Message) @(Model.CurrentYear==0?null:Model.CurrentYear) !</h1>
    <h4>@Model.SpecialMessage</h4>
    <img src="/img/create-card.png" />
    <hr class="bg-primary w-75">
    <h3>On our platform you will create and collect game cards.</h3>
    @if (User == null)
    {
        <h3>
            <a class="text-primay" href="/Users/Login">Login</a>
            if you have an account or
            <a class="text-primay" href="/Users/Register">Register</a>
            now and check our deals.
        </h3>
    }
</div>
